<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <AssemblyName>protogen</AssemblyName>
    <Title>protogen</Title>
    <Description>ProtoBuf DSL (proto2 / proto3) tools for protobuf-net</Description>
    <TargetFrameworks>net40;netstandard1.3</TargetFrameworks><!--net20;net35;-->
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)' == 'jsil'">
    <TargetFrameworks>net40</TargetFrameworks>
    <DefineConstants>$(DefineConstants),NO_RUNTIME</DefineConstants>
    <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
    <Optimize>True</Optimize>
  </PropertyGroup>
  <ItemGroup Condition="'$(Configuration)' == 'jsil'">
    <Compile Include="..\protobuf-net\ProtoContractAttribute.cs" />
    <Compile Include="..\protobuf-net\ProtoMemberAttribute.cs" />
    <Compile Include="..\protobuf-net\ProtoEnumAttribute.cs" />
    <Compile Include="..\protobuf-net\DataFormat.cs" />
    <Compile Include="..\protobuf-net\ImplicitFields.cs" />
    <Compile Include="..\protobuf-net\DiscriminatedUnion.cs" />
  </ItemGroup>
  <ItemGroup Condition="'$(Configuration)' != 'jsil'">
    <ProjectReference Include="..\protobuf-net\protobuf-net.csproj" />
  </ItemGroup>
</Project>